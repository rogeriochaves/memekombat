	<div class="tit-ranking" style="font-size:16px; margin:20px 0 0 250px; height: 25px; padding:16px 0;">
		<%= portugues ? "Mais Memes" : "More Memes" %>
		<img src="img/loading.gif" style="display:none" />
	</div>
</a>

<script type="text/javascript" charset="utf-8">
	(function(){
		
		$('form#frmBusca').submit(function() {
			$('.carregando').show();
			$('.carregando').css({'opacity': '0'});
			$('.carregando').animate({'opacity': '0.5'});
			$.post('arena', $(this).serialize(), function(data){
				$('.conteudo').html(data);
				$('.carregando').fadeOut();
				ajaxizar_links();
			});
			return false;
		});
		$('.memes-arena li img').each(function() {
			$(this).load(function(){
				if($(this).height() > $(this).width()){
					$(this).css('width', '111px');
				}else{
					$(this).css('height', '111px');
				}
			});
		});
		
		$('.mais-memes').click(function() {
			$(this).find("img").show();
			$.post('_arena.php', {arena_uids: arena_uids.join(",")}, function(data) {
				$('.mais-memes').find("img").hide();
				$('.memes-arena').append(data);
				cached_pages['arena.php'] = $('.conteudo').html();
				ajaxizar_links();
			});
			return false;
		});
		
	})();
</script>